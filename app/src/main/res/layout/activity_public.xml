<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/batman_chhati"
    android:gravity="center"
    android:padding="8dp"
    tools:context=".PublicActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/activity_public_most_wanted_button"
        android:layout_width="match_parent"
        android:backgroundTint="@color/colorTextLight"
        android:drawableLeft="@drawable/ic_whatshot_black_24dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:text="Most Wanted List" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/activity_public_file_complaint_button"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:backgroundTint="@color/colorTextLight"
        android:drawableLeft="@drawable/ic_file_upload_black_24dp"
        android:layout_height="wrap_content"
        android:text="File a Complaint" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/activity_public_tip_button"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:drawableLeft="@drawable/ic_error_black_24dp"
        android:backgroundTint="@color/colorTextLight"
        android:layout_height="wrap_content"
        android:text="Anonymous Tip" />


</LinearLayout>