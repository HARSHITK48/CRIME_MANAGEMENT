<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".PublicActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/activity_public_most_wanted_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Most Wanted List" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/activity_public_file_complaint_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="File a Complaint" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/activity_public_tip_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anonymous Tip" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/activity_public_scan_face_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan Face"
        android:textColor="#fff"
        app:backgroundTint="#0984e3" />

</LinearLayout>